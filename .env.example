# Private key for deployment (with 0x prefix)
PRIVATE_KEY=0x_your_private_key_here

# Network-specific RPC URLs
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/${ALCHEMY_API_KEY}
BSC_RPC_URL=https://bnb-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}
BSC_TESTNET_RPC_URL=https://bnb-testnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# Etherscan API key for contract verification (v2 supports all networks)
ETHERSCAN_API_KEY=your_etherscan_api_key

# PicoVerifier contract addresses (fill in after deployment)
MAINNET_VERIFIER=
SEPOLIA_VERIFIER=
BSC_VERIFIER=
BSC_TESTNET_VERIFIER=

# ================================
# Prover Service Configuration
# ================================

# Google Cloud Pub/Sub Configuration
GCP_PROJECT_ID=your-gcp-project-id
PROVER_SUBSCRIPTION=prover-requests-sub
RESULT_TOPIC=prover-results

# Prover Service Settings
MAX_CONCURRENT_PROOFS=2
PROOF_TIMEOUT_SECS=3600

# File Paths (when running from root directory)
ELF_PATH=./app/elf/riscv32im-pico-zkvm-elf
OUTPUT_DIR=./prover/data

# Logging Configuration
JSON_LOGGING=false
LOG_LEVEL=info